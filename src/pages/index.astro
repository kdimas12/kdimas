---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon";
import { Image } from "astro:assets";
import profile from "../assets/profile.jpg";
---

<Layout title="Dimas Kurniawan.">
  <main class="max-w-screen-md mx-auto px-3 py-10 flex-grow">
    <div class="flex flex-col-reverse items-start sm:flex-row gap-8">
      <div>
        <p class="text-gray-600">Hi there ðŸ‘‹, I'm</p>
        <h1
          class="font-bold text-3xl md:text-4xl bg-gradient-to-r from-indigo-500 to-blue-500 bg-clip-text text-transparent"
        >
          Dimas Kurniawan
        </h1>
        <p class="mt-1.5 text-gray-600">
          A student with high skills and interest in technology, particularly in
          Software Engineering and Frontend Development. I'm currently learning <a
            href="https://astro.build/"
            target="_blank"
            rel="noopener noreferrer">Astro</a
          > and
          <a
            href="https://tailwindcss.com/"
            target="_blank"
            rel="noopener noreferrer">Tailwind CSS</a
          >.
        </p>

        <ul class="flex space-x-3 flex items-center mt-5">
          <li>
            <a
              href="https://www.instagram.com/kdimas29/"
              target="_blank"
              class="text-gray-600 flex items-center gap-1 unset"
              ><Icon
                pack="ion"
                name="logo-instagram"
                class="w-6 transition-all transform hover:rotate-6"
              /></a
            >
          </li>
          <li>
            <a
              href="https://github.com/kdimas12"
              target="_blank"
              class="text-gray-600 flex items-center gap-1 unset"
              ><Icon
                pack="ion"
                name="logo-github"
                class="w-6 transition-all transform hover:rotate-6"
              /></a
            >
          </li>
          <li>
            <a
              href="https://www.linkedin.com/in/dimaskurniawan40"
              target="_blank"
              class="text-gray-600 flex items-center gap-1 unset"
              ><Icon
                pack="ion"
                name="logo-linkedin"
                class="w-6 transition-all transform hover:rotate-6"
              /></a
            >
          </li>
        </ul>
      </div>
      <Image
        src={profile}
        alt="kdimas Profile picture"
        class="w-[200px] h-[200px] rounded-md"
      />
    </div>

    <div>
      <h2 class="font-bold text-xl md:text-2xl mt-10 text-gray-700">
        Projects.
      </h2>
      <div class="mt-3">
        <div class="flex flex-col sm:flex-row gap-8">
          <div class="flex flex-col gap-2">
            <h3 class="font-bold text-lg text-gray-600">perpus-app</h3>
            <p class="text-gray-600">
              A simple search book built with Laravel and Tailwind CSS.
            </p>
            <div class="flex gap-4">
              <a
                href="https://github.com/kdimas12/perpus-app"
                target="_blank"
                class="text-gray-600 flex items-center gap-1 unset"
                >Source
                <Icon
                  pack="ion"
                  name="open-outline"
                  class="w-4 transition-all transform hover:rotate-6"
                /></a
              >
            </div>
          </div>
          <div class="flex flex-col gap-2">
            <h3 class="font-bold text-lg text-gray-600">My personal website</h3>
            <p class="text-gray-600">The website you are reading right now.</p>
            <a
              href="https://github.com/kdimas12/kdimas"
              target="_blank"
              class="text-gray-600 flex items-center gap-1 unset"
              >Source
              <Icon
                pack="ion"
                name="open-outline"
                class="w-4 transition-all transform hover:rotate-6"
              /></a
            >
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
